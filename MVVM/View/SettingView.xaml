<UserControl x:Class="EasySaveApp.MVVM.View.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasySaveApp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Margin="30">
        <Grid>
            <StackPanel>
                <StackPanel>
                    <TextBlock Text="Choose a language"
                               FontSize="20"
                               Foreground="AliceBlue"
                               Margin="10"/>
                    <ComboBox x:Name="Language"
                              Width="200"
                              Height="30"
                              Margin="10"
                              SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"    
                              >
                        <ComboBoxItem Content="English"/>
                        <ComboBoxItem Content="French"/>
                    </ComboBox>

                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Choose a type of log"
                               FontSize="20"
                               Foreground="AliceBlue"
                               Margin="10"/>
                    <ComboBox x:Name="extension"
                              Width="200"
                              Height="30"
                              Margin="10"
                              SelectedItem="{Binding SelectedExtension, Mode=TwoWay}">
                        <ComboBoxItem Content="json"/>
                        <ComboBoxItem Content="xml"/>
                    </ComboBox>
                </StackPanel>
                <Button Content="Save" 
                        Height="36" 
                        Width="132" 
                        Command="{Binding SaveSetting}"/>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
